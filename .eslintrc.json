{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2020": true,
    "node": true,
    "jest/globals": true
  },
  "plugins": [
    "jest"
  ],
  "extends": [
    "airbnb-base",
    "plugin:jest/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "brace-style": ["error", "stroustrup"],
    "no-underscore-dangle":  ["error", { "allow": ["_id"] }],
    "no-use-before-define": "off"
  }
}
